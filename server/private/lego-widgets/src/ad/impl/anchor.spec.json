                                "target": {
                                    "isRequired": false,
                                    "isAllowNoValue": false,
                                    "defaultValue": "_blank"
                                },
                                "href": {
                                    "isRequired": true,
                                    "isAllowNoValue": false,
                                    "valueType": "url"
                                }
                            },
                            "requiredAttributes": [
                                "target",
                                "href"
                            ],
                            "isAllowNoContent": false,
                            "isSimpleTag": false
                        }
                    }
