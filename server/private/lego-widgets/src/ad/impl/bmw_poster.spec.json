[
    {
        "name": "interval",
        "displayName": "AutoLoopInterval",
        "defaultValue": "3000",
        "datatype": "HIDDEN",
        "rules": {
            "stringType": "NUMBER"
        },
        "extraAttr": {
            "filters": "float"
        }
    },
    {
        "name": "width",
        "displayName": "ImageListWidth",
        "defaultValue": "536",
        "datatype": "HIDDEN",
        "rules": {
            "stringType": "NUMBER"
        },
        "extraAttr": {
            "filters": "float"
        }
    },
    {
        "name": "posters",
        "displayName": "产品海报",
        "datatype": "LIST",
        "rules": {
            "minCount": 10,
            "maxCount": 10
        },
        "items": [
            {
                "name": "img_url",
                "displayName": "海报图片",
                "defaultValue": "http://dummyimage.com/536x235/",
                "datatype": "UPLOAD",
                "rules": {
                    "required": true
                },
                "extraAttr": {
                    "fileType": "IMAGE",
                    "width": 536,
                    "height": 235,
                    "maxSize": 40,
                    "ext": "jpg"
                }
            },
            {
                "name": "rcv_url",
                "displayName": "海报链接",
                "defaultValue": "",
                "datatype": "STRING",
                "rules": {
                    "stringType": "URL",
                    "required": true,
                    "maxByteLength": 255
                },
                "extraAttr": {},
                "tip": "http://",
                "multiline": false
            },
            {
                "name": "thumb_url",
                "displayName": "略缩图",
                "defaultValue": "http://dummyimage.com/95x55/",
                "datatype": "UPLOAD",
                "rules": {
                    "required": true
                },
                "extraAttr": {
                    "fileType": "IMAGE",
                    "width": 95,
                    "height": 55,
                    "maxSize": 7,
                    "ext": "jpg"
                }
            },
            {
                "name": "title",
                "displayName": "新品名称",
                "defaultValue": "",
                "datatype": "STRING",
                "rules": {
                    "required": true,
                    "minByteLength": 2,
                    "maxByteLength": 20
                },
                "extraAttr": {},
                "multiline": false
            },
            {
                "name": "text_rcv_url",
                "displayName": "新品特性共用链接",
                "defaultValue": "",
                "datatype": "STRING",
                "rules": {
                    "stringType": "URL",
                    "required": false,
                    "maxByteLength": 255
                },
                "extraAttr": {},
                "tip": "http://",
                "multiline": false
            },
            {
                "name": "links",
                "displayName": "新品特性",
                "datatype": "LIST",
                "rules": {
                    "minCount": 0,
                    "maxCount": 3
                },
                "extraAttr": {
                    "initialCount": 3
                },
                "items": [
                    {
                        "name": "text",
                        "displayName": "新品特性",
                        "defaultValue": "",
                        "datatype": "STRING",
                        "rules": {
                            "required": true,
                            "minByteLength": 2,
                            "maxByteLength": 12
                        },
                        "extraAttr": {},
                        "multiline": false
                    }
                ]
            }
        ]
    },
    {
        "name": "small_head",
        "displayName": "官网描述",
        "datatype": "OBJECT",
        "display": "toggle-block",
        "items": [
            {
                "name": "titletext",
                "displayName": "标题",
                "defaultValue": "",
                "datatype": "HTML",
                "rules": {
                    "required": true,
                    "minTextByteLength": 12,
                    "maxTextByteLength": 50,
                    "tagList": {
                        "em": {
                            "minTextByteLength": 2,
                            "maxTextByteLength": 12,
                            "minCount": 1,
                            "maxCount": 1
                        }
                    }
                },
                "extraAttr": {
                    "editorConfig": {
                        "tools": [
                            "emphasize"
                        ]
                    },
                    "tagList": {
                        "em": {
                            "isAllowNoContent": false,
                            "isSimpleTag": false
                        }
                    }
                },
                "multiline": false
            },
            {
                "name": "titleurl_rcv_url",
                "displayName": "标题跳转地址",
                "defaultValue": "",
                "datatype": "STRING",
                "rules": {
                    "stringType": "URL",
                    "required": true,
                    "maxByteLength": 255
                },
                "extraAttr": {},
                "tip": "http://",
                "multiline": false
            },
            {
                "name": "display_official_site_icon",
                "datatype": "BOOL",
                "displayName": "是否显示“官网”字样",
                "defaultValue": true,
                "display": "none",
                "rules": {}
            },
            {
                "name": "description_rcv_html",
                "displayName": "描述",
                "datatype": "HTML",
                "rules": {
                    "required": true,
                    "minTextByteLength": 168,
                    "maxTextByteLength": 232,
                    "tagList": {
                        "a": {
                            "minTextByteLength": 2,
                            "maxTextByteLength": 20,
                            "minCount": 0,
                            "maxCount": 5
                        }
                    }
                },
                "multiline": true,
                "extraAttr": {
                    "editorConfig": {
                        "tools": [
                            "link"
                        ]
                    },
                    "tagList": {
                        "a": {
                            "attributeRules": {
                                "href": {
                                    "isAllowNoValue": false,
                                    "isRequired": true,
                                    "valueType": "url"
                                },
                                "target": {
                                    "defaultValue": "_blank",
                                    "isAllowNoValue": false,
                                    "isRequired": false
                                }
                            },
                            "isAllowNoContent": false,
                            "isSimpleTag": false,
                            "requiredAttributes": [
                                "target",
                                "href"
                            ]
                        }
                    }
                }
            },
            {
                "name": "site",
                "displayName": "显示url",
                "defaultValue": "",
                "datatype": "STRING",
                "rules": {
                    "required": true,
                    "maxByteLength": 30
                },
                "tip": "http://",
                "extraAttr": {},
                "multiline": false
            }
        ]
    }
]