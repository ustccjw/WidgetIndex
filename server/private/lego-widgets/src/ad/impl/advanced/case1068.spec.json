            "minCount": 3,
            "maxCount": 6,
            "jsRule": "function (tabs){ function getByteLength(source) { return String(source).replace(/[^\\x00-\\xff]/g, 'ci').length; } var len = tabs.length; var maxByteLen = 8 + (6 - len) * 4; for (var i=0;i<len;i++) { if (getByteLength(tabs[i]['tab_title']) > maxByteLen) { return 'tab数为' + len + '时, 每个tab最多' + maxByteLen + '个字节(' + maxByteLen/2 + '个汉字)'; } } }"
        },
        "items": [{
