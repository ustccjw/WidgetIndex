[
    {
        "name": "small_head",
        "displayName": "标题描述",
        "datatype": "OBJECT",
        "display": "toggle-block",
        "items": [
            {
                "name": "titletext",
                "displayName": "标题",
                "tip": "5~16个汉字，<em>飘红词</em>6个汉字以内",
                "datatype": "HTML",
                "multiline": false,
                "rules": {
                    "required": true,
                    "minTextByteLength": 10,
                    "maxTextByteLength": 32,
                    "tagList": {
                        "em": {
                            "maxTextByteLength": 12,
                            "minCount": 1,
                            "maxCount": 1
                        }
                    }
                },
                "extraAttr": {
                    "editorConfig": {
                        "tools": [
                            "emphasize"
                        ],
                        "style": "html {-webkit-box-shadow: 1px 1px 1px -1px rgba(0, 0, 0, 0.3) inset;-moz-box-shadow: 1px 1px 1px -1px rgba(0, 0, 0, 0.3) inset;box-shadow: 1px 1px 1px -1px rgba(0, 0, 0, 0.3) inset;color:#333;padding:2px 4px;}body {line-height:22px;font-family:Helvetica,Arial,sans-serif;}em {color: red;font-style: normal;}"
                    },
                    "tagList": {
                        "em": {
                            "isAllowNoContent": false,
                            "isSimpleTag": false
                        }
                    }
                }
            },
            {
                "name": "titleurl_rcv_url",
                "displayName": "标题URL",
                "tip": "http://",
                "datatype": "STRING",
                "multiline": false,
                "rules": {
                    "required": true,
                    "stringType": "URL",
                    "maxByteLength": 255
                }
            },
            {
                "name": "description_rcv_html",
