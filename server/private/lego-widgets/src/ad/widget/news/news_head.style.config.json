{
    "selectors" : [
        {
            "name": ".ad-widget-news-head",
            "displayName": "边框设置",
            "rules": [
                {
                    "name": "border-bottom",
                    "displayName": "下边框",
                    "options": ['none', '1px solid #ddd'],
                    "defaultValue": "none"
                },
                {
                    "name": "padding-bottom",
                    "displayName": "内边距（下）",
                    "options": ['0px', '10px'],
                    "defaultValue": "10px"
                },
                {
                    "name": "margin-bottom",
                    "displayName": "外边距（下）",
                    "options": ['0px', '10px'],
                    "defaultValue": "0px"
                }
            ]
        },
        {
            "name": ".ad-widget-news-head .content",
            "displayName": "宽度设置",
            "rules": [
                {
                    "name": "width",
                    "displayName": "宽度",
                    "options": ['535px', '515px'],
                    "defaultValue": "535px"
                }
            ]
        },
        {
            "name": ".ad-widget-news-head .content .logo",
            "displayName": "logo图片设置",
            "rules": [
                {
                    "name": "width",
                    "displayName": "宽度",
                    "options": ['90px', '75px'],
                    "defaultValue": "90px"
                },
                {
                    "name": "height",
                    "displayName": "高度",
                    "options": ['90px', '75px'],
                    "defaultValue": "90px"
                },
                {
                    "name": "margin-right",
                    "displayName": "右边距",
                    "options": ['10px', '0px'],
                    "defaultValue": "10px"
                },
                {
                    "name": "border",
                    "displayName": "边框",
                    "options": ['1px solid #eee', 'none'],
                    "defaultValue": "1px solid #eee"
                }
            ]
        },
        {
            "name": ".ad-widget-news-head .content .sub-title",
            "displayName": "新闻源文字设置",
            "rules": [
                {
                    "name": "color",
                    "displayName": "字体颜色",
                    "options": ['#999999', '#000000'],
                    "defaultValue": "#999999"
                }
            ]
        },
        {
            "name": ".ad-widget-news-head .content .description",
            "displayName": "描述文字设置",
            "rules": [
                {
                    "name": "color",
                    "displayName": "字体颜色",
                    "options": ['#999999', '#000000'],
                    "defaultValue": "#000000"
                }
            ]
        }
    ]
}

