{
    "selectors" : [
        {
            "name": ".ad-widget-section",
            "displayName": "背景设置",
            "rules": [
                {
                    "name": "background-image",
                    "displayName": "背景图",
                    "defaultValue": "url(http://bcscdn.baidu.com/adtest/255563a5006f8a7b2fad047bfb03e01a.png)"
                },{
                    "name": "background-repeat",
                    "displayName": "背景图平铺设置",
                    "defaultValue": "no-repeat"
                },{
                    "name": "background-position",
                    "displayName": "背景图位置设置",
                    "defaultValue": "top left"
                },{
                    "name": "padding",
                    "displayName": "内边距",
                    "options": ["0px", "0px 5px", "0px 7px"],
                    "defaultValue": "0px 7px"
                }
            ]
        },
        {
            "name": ".ad-widget-section li a",
            "displayName": "栏目标题设置",
            "rules": [
                {
                    "name": "color",
                    "options": ["red", "#333333", "#0000cc"],
                    "defaultValue": "#0000cc"
                },
                {
                    "name": "font-size",
                    "displayName": "字体大小",
                    "options": ["12px", "13px", "14px"], // 可选
                    "defaultValue": "12px"
                }
            ]
        },
        {
            "name": ".ad-widget-section li p",
            "displayName": 栏目描述边距设置",
            "rules": [
                {
                    "name": "margin-left",
                    "displayName": "左外边距",
                    "options": ["0", "10px", "20px"], // 可选
                    "defaultValue": "20px"
                }
            ]
        },
        {
            "name": ".ad-widget-section li p a",
            "displayName": "栏目描述默认字体设置",
            "rules": [
                {
                    "name": "color",
                    "displayName": "颜色",
                    "options": ["#000000", "#0000cc", "#908454"], // 可选
                    "defaultValue": "#908454"
                },
                {
                    "name": "text-decoration",
                    "displayName": "是否有下划线",
                    "options": ["none", "underline"], // 可选
                    "defaultValue": "none"
                }
            ]
        },
        {
            "name": ".ad-widget-section li p a:hover",
            "displayName": "栏目描述hover字体设置",
            "rules": [
                {
                    "name": "color",
                    "displayName": "颜色",
                    "options": ["#000000", "#0000cc", "#908454"], // 可选
                    "defaultValue": "#488048"
                }
            ]
        },
        {
            "name": ".ad-widget-section li span",
            "displayName": "栏目捷径设置",
            "rules": [
                {
                    "name": "height",
                    "displayName": "捷径高度",
                    "options": ["100px", "75px", "90px"], // 可选
                    "defaultValue": "75px"
                },
                {
                    "name": "width",
                    "displayName": "捷径宽度", // 可选
                    "options": ["499px", "500px", "480px"], // 可选
                    "defaultValue": "499px"
                },
                {
                    "name": "margin",
                    "displayName": "外边距", // 可选
                    "options": ["3px 0", "0", "5px"], // 可选
                    "defaultValue": "3px 0"
                }
            ]
        }
    ]
}

