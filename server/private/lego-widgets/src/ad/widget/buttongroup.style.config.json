{
    "selectors" : [
        {
            "name": ".ad-widget-button-group",
            "displayName": "基本设置",
            "rules": [
                {
                    "name": "background",
                    "displayName": "背景色", // 可选
                    "options": ["none"],
                    "defaultValue": "#594537"
                }
            ]
        },
        {
            "name": ".ad-widget-button-group tr td a",
            "displayName": "文字设置",
            "rules": [
                {
                    "name": "color",
                    "displayName": "颜色", // 可选
                    "defaultValue": "#eae2dd"
                },
                {
                    "name": "text-decoration",
                    "displayName": "下划线", // 可选
                    "options": ["underline", "none"],
                    "defaultValue": "none"
                }
            ]
        },
        {
            "name": ".ad-widget-button-group tr td",
            "displayName": "单链接词设置",
            "rules": [
                {
                    "name": "border-color",
                    "displayName": "分隔线颜色", // 可选
                    "defaultValue": "#9a765f"
                },
                {
                    "name": "border-width",
                    "displayName": "分隔线宽度", // 可选
                    "defaultValue": "1px"
                },
                {
                    "name": "background",
                    "displayName": "背景色", // 可选
                    "options": ["none"],
                    "defaultValue": "none"
                },
                {
                    "name": "height",
                    "displayName": "高度",
                    "options": ["18px", "24px"],
                    "defaultValue": "18px"
                },
                {
                    "name": "line-height",
                    "displayName": "行高",
                    "options": ["18px", "24px"],
                    "defaultValue": "18px"
                }
            ]
        }
    ]
}