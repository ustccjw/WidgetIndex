{
    "selectors" : [
        {
            "name": ".ad-widget-image-normal a img",
            "displayName": "图片设置",
            "rules": [
                {
                    "name": "border",
                    "displayName": "边框",
                    "options": ['none', '1px solid #ccc'],
                    "defaultValue": "none"
                },{
                    "name": "width",
                    "displayName": "宽度",
                    "options": ['98px', '50px'],
                    "defaultValue": "98px"
                },{
                    "name": "height",
                    "displayName": "高度",
                    "options": ['68px', '40px'],
                    "defaultValue": "68px"
                }
            ]
        },
        {
            "name": ".ad-widget-image-normal a",
            "displayName": "布局",
            "rules": [
                {
                    "name": "text-align",
                    "displayName": "对齐方式",
                    "options": ['left', 'center'],
                    "defaultValue": "center"
                },
                {
                    "name": "margin-right",
                    "displayName": "图片间距",
                    "defaultValue": '10px'
                },{
                    "name": "width",
                    "displayName": "宽度",
                    "options": ['98px', '50px'],
                    "defaultValue": "98px"
                },{
                    "name": "height",
                    "displayName": "高度",
                    "options": ['68px', '40px'],
                    "defaultValue": "68px"
                }
            ]
        },
        {
            "name": ".ad-widget-image-normal a span",
            "displayName": "文本设置",
            "rules": [
                {
                    "name": "color",
                    "displayName": "字体颜色",
                    "options": ['#000000', '#ffffff'],
                    "defaultValue": "#ffffff"
                },
                {
                    "name": "line-height",
                    "displayName": "文本行高",
                    "defaultValue": '18px'
                },
                {
                    "name": "background",
                    "displayName": "文本背景",
                    "options": ['#000000', '#ffffff', 'none'],
                    "defaultValue": '#000000'
                },
                {
                    "name": "position",
                    "displayName": "文本定位方式",
                    "options": ['static', 'relative', 'absolute'],
                    "defaultValue": 'absolute'
                }
            ]
        }
    ]
}

