{
    "selectors" : [
        {
            "name" : "ul.ad-widget-section li.title",
            "displayName" : "标题设置",
            "rules": [
                {
                    "name": "font-family",
                    "options": ["宋体, Arial", "Arial, sans-serif"],
                    "defaultValue": "Arial, sans-serif"
                },
                {
                    "name": "color",
                    "options": ["red", "#333333", "#0000cc"],
                    "defaultValue": "#333333"
                },
                {
                    "name": "font-size",
                    "displayName": "字体大小", // 可选
                    "options": ["12px", "14px", "16px"],
                    "defaultValue": "14px"
                },
                {
                    "name": "font-weight",
                    "displayName": "字体粗细", // 可选
                    "options": ["normal", "bold", "bolder"],
                    "defaultValue": "normal"
                }
            ]
        },
        {
            "name": "ul.ad-widget-section li a",
            "displayName": "项目设置",
            "rules": [
                {
                    "name": "color",
                    "options": ["red", "#333333", "#0000cc"],
                    "defaultValue": "#0000cc"
                },
                {
                    "name": "font-size",
                    "displayName": "字体大小", // 可选
                    "options": ["12px", "13px", "14px"], // 可选
                    "defaultValue": "12px"
                }
            ]
        },
        {
            "name": "ul.ad-widget-section li p",
            "displayName": "项目描述设置",
            "rules": [
                {
                    "name": "margin-left",
                    "displayName": "左外边距", // 可选
                    "options": ["0", "10px", "20px"], // 可选
                    "defaultValue": "20px"
                }
            ]
        }
    ]
}

