{
    "contents": ["ad.widget.ButtonList"],
    "userPrefs": [
        {
            "name": "options",
            "displayName": "链接列表",
            "datatype": "LIST",
            "items": [
                {
                    "name": "text",
                    "displayName": "链接名",
                    "defaultValue": "官方微博",
                    "datatype": "STRING",
                    "rules": {
                        "required": true,
                        "maxByteLength": 12
                    }
                },
                {
                    "name": "rcv_url",
                    "displayName": "链接地址",
                    "defaultValue": "http://",
                    "datatype": "STRING",
                    "rules": {
                        "required": true,
                        "stringType": "URL"
                    }
                }
            ],
            "rules": {
                "minCount": 3,
                "maxCount": 6
            }
        },
        {
            "name": "button_width",
            "displayName": "按钮宽度",
            "defaultValue": 0,
            "datatype": "STRING",
            "extraAttr": {
                "filters": "int"
            }
        }
    ]
}
