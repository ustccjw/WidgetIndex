{
    "contents": ["ad.widget.HtmlText"],
    "userPrefs": [
        {
            "name": "rcv_html",
            "displayName": "内容",
            "nameTip": "富文本",
            "tip": "一段html文本",
            "defaultValue": "<em>大唐无双2</em>活动公告",
            "datatype": "HTML",
            "multiline": false,
            "rules": {
                "required": true,
                "minTextByteLength": 12,
                "maxTextByteLength": 60,
                "tagList" : {
                    "em": {
                        "minTextByteLength": 1,
                        "maxCount": 1
                    }
                }
            },
            "extraAttr": {
                "editorConfig": {
                    "tools": ["emphasize"]
                },
                "tagList": {
                    "em": {
                        "isAllowNoContent": false,
                        "isSimpleTag": false
                    }
                }
            }
        },
        {
            "name": "rcv_url",
            "displayName": "rcv_url",
            "tip": "http://",
            "datatype": "STRING",
            "defaultValue": "http://www.baidu.com",
            "rules": {
                "stringType": "URL",
                "required": true,
                "maxByteLength": 255
            },
            "extraAttr": {},
            "multiline": false
        }
    ]
}