            "datatype": "HTML",
            "multiline": false,
            "rules": {
                "required": true,
                "minByteLength": 12,
                "maxByteLength": 50,
                "tagList" : {
                    "em": {
                        "maxTextByteLength": 12,
                        "minCount": 1,
                        "maxCount": 1
                    }
                }
            },
            "extraAttr": {
                "editorConfig": {
                    "tools": ["emphasize"]
                },
                "tagList" : {
                    "em": {
                        "isAllowNoContent": false,
