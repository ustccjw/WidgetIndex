            "tip": "../impl/img/burberry.png",
            "datatype": "UPLOAD",
            "defaultValue": "../impl/img/burberry.png",
            "rules": {
                "required": true
            },
            "extraAttr": {
                "fileType": "IMAGE",
                "width": 180,
                "height": 100,
                "maxSize": 15,
                "ext": "jpg,png"
            }
        },
        {
            "name": "logo_rcv_url",
            "displayName": "logo_rcv_url",
            "tip": "http://",
            "datatype": "STRING",
            "defaultValue": "www.baidu.com",
            "rules": {
                "stringType": "URL",
                "required": true,
                "maxByteLength": 255
            },
            "extraAttr": {},
            "multiline": false
        },
        {
            "name": "activetip",
            "displayName": "活动TIP文本",
            "tip": "活动TIP文本",
            "datatype": "STRING",
            "rules": {
                "maxByteLength": 32
            }
        },
        {
            "name": "title",
            "displayName": "标题",
